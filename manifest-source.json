{
  "components": {
    "commands": {
      "description": "Claude command files for various tasks",
      "files": [
        "./commands/**/*.md",
        "!./commands/**/README.md",
        "!./commands/**/*.draft.md"
      ],
      "special_mappings": {}
    },
    "personas": {
      "description": "Claude persona configurations", 
      "files": [
        "./personas/*.md",
        "!./personas/example-*.md"
      ],
      "special_mappings": {}
    },
    "templates": {
      "description": "Project and documentation templates",
      "files": [
        "./templates/*.md"
      ],
      "special_mappings": {}
    },
    "snippets": {
      "description": "Configuration snippets for settings.json and CLAUDE.md",
      "files": [
        "./snippets/settings.json",
        "./snippets/CLAUDE.md"
      ],
      "special_mappings": {}
    }
  }
}